pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ardaakkiz/app.git'
            }
        }
        stage('Install Tools') {
            steps {
                sh '''
                    #!/bin/bash

                    # Install AWS CLI
                    curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
                    unzip -o awscliv2.zip
                    ./aws/install --update -i /usr/local/aws-cli -b /usr/local/bin

                    # Verify AWS CLI installation
                    /usr/local/bin/aws --version

                    # Install kubectl
                    curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
                    chmod +x kubectl
                    mv kubectl /usr/local/bin/

                    # Verify kubectl installation
                    /usr/local/bin/kubectl version --client

                    # Update package lists and install python3-venv
                    apt-get update
                    apt-get install -y python3-venv python3-pip

                    # Create a virtual environment for Ansible
                    python3 -m venv ansible-env
                    source ansible-env/bin/activate

                    # Install Ansible in the virtual environment
                    pip install ansible

                    # Verify Ansible installation
                    ansible-playbook --version

                    # Deactivate the virtual environment
                    deactivate
                '''
            }
        }
        stage('Deploy') {
            steps {
                withEnv(["AWS_ACCESS_KEY_ID=${env.AWS_ACCESS_KEY_ID}", "AWS_SECRET_ACCESS_KEY=${env.AWS_SECRET_ACCESS_KEY}"]) {
                    sh '''
                        #!/bin/bash

                        # Activate the virtual environment
                        source ansible-env/bin/activate

                        # Configure AWS and Kubernetes
                        aws eks update-kubeconfig --name production-cluster --region us-east-1
                        kubectl get nodes

                        # Run the Ansible playbook
                        ansible-playbook ansible-playbook.yml 

                        # Deactivate the virtual environment
                        deactivate
                    '''
                }
            }
        }
    }
}
